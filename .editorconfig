root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,bas,cls,dcm,frm}]
end_of_line = crlf
charset = cp932

[*.{yml,yaml,html,ts,js,json,css,scss,less,md}]
indent_size = 2

[Makefile]
indent_style = tab
